<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/chart_settings_transition"
        app:constraintSetEnd="@id/end_char_settings_transition"
        app:constraintSetStart="@+id/start_chart_settings_transition"
        app:duration="@integer/durationX2" />

    <ConstraintSet android:id="@+id/start_chart_settings_transition">
        <Constraint
            android:id="@+id/chart_settings"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/x"
            android:layout_marginEnd="@dimen/x7"
            app:layout_constraintBottom_toBottomOf="@+id/app_bar_content"
            app:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end_char_settings_transition">
        <Constraint
            android:id="@+id/chart_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x"
            android:layout_marginTop="@dimen/x"
            android:layout_marginEnd="@dimen/x"
            android:layout_marginBottom="@dimen/x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>


    <Transition
        android:id="@+id/currency_settings_transition"
        app:constraintSetEnd="@id/end_currency_settings_transition"
        app:constraintSetStart="@+id/start_currency_settings_transition"
        app:duration="@integer/durationX2"/>

    <ConstraintSet android:id="@+id/start_currency_settings_transition">
        <Constraint
            android:id="@+id/currency_settings"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/x"
            android:layout_marginEnd="@dimen/x22"
            app:layout_constraintBottom_toBottomOf="@+id/app_bar_content"
            app:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end_currency_settings_transition">
        <Constraint
            android:id="@+id/currency_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x"
            android:layout_marginTop="@dimen/x"
            android:layout_marginEnd="@dimen/x"
            android:layout_marginBottom="@dimen/x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

</MotionScene>
