<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextBaseStyle</item>
    </style>

    <style name="TextBaseStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="NestedAppbar" parent="BaseTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="CardViewCustom" parent="CardView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BaseTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BaseTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>